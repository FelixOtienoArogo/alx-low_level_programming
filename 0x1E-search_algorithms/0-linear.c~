
#include <stdio.h>
#include <stdlib.h>
#include "search_algos.h"

int linear_search(int *array, size_t size, int value)
{
int max = size;
int i = -1;

if (array == NULL)
{
return (i);
}
for (i = 0; i < max; i++)
{
printf("Value checked array[%d] = [%d]\n", i, array[i]);
if (value == array[i])
{
return (i);
}
}
return (-1);
}
